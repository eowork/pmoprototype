# PMO Backend Environment Configuration
# Copy this file to .env and update values

# Database Connection
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=pmo_dashboard
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Alternative: Full connection string (overrides above if set)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/pmo_dashboard

# Application
PORT=3000
NODE_ENV=development

# Authentication (JWT)
AUTH_JWT_SECRET=your-secret-key-min-32-characters-here
AUTH_JWT_EXPIRES_IN=8h  
PASSWORD_HASH_ROUNDS=10


# Google OAuth (SSO)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback
GOOGLE_ALLOWED_DOMAINS=carsu.edu.ph
FRONTEND_URL=http://localhost:5173
